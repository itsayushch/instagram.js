{
    "compilerOptions": {
        "lib": [
            "ES2020",
            "esnext",
            "esnext.array",
            "esnext.asynciterable",
            "esnext.intl",
            "esnext.symbol"
        ],
        "module": "CommonJS",
        "target": "ES2020",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "dist/",
        "rootDir": "src/"
    }
}